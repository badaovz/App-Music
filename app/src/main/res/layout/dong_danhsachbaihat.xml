<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:id="@+id/rldsbhquanngcao"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvthutubhqc"
           android:layout_margin="15dp"
            android:text="1"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvtenbhdsbhqc"
            android:textSize="20sp"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="ten bai hat"
            android:textColor="#000"
            android:layout_toRightOf="@+id/tvthutubhqc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvtencasibhdsbhqc"
            android:textSize="15sp"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="ten casi"
            android:textColor="#7e7c7c"
            android:layout_toRightOf="@+id/tvthutubhqc"
            android:layout_below="@+id/tvtenbhdsbhqc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iviconlovedsbhqc"
            android:src="@drawable/iconlove"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/tvluotthichdsbhs"
            android:text="23"
            android:textColor="#c1bfbf"
            android:maxWidth="30dp"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/iviconlovedsbhqc"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.v7.widget.CardView>